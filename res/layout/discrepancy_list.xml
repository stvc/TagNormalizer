<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/discrepancy_list_progressBar" android:layout_gravity="center"
            android:indeterminateBehavior="repeat" android:indeterminate="true"
            android:progress="@android:integer/config_shortAnimTime"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="No Discrepancies Found"
            android:id="@+id/discrepancy_list_textView_none" android:textStyle="italic" android:visibility="invisible"/>
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/discrepancy_list_listView"/>
</LinearLayout>